<h1>Listing friends</h1>

<table>
  <tr>
    <th>Fullname</th>
    <th>Nickname</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Friendshiplevel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.fullname %></td>
    <td><%= friend.nickname %></td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.website %></td>
    <td><%= friend.friendshiplevel %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

